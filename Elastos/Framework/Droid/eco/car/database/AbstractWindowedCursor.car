module
{
    interface IAbstractCursor;
    interface ICursorWindow;

    /**
     * A base class for Cursors that store their data in {@link CursorWindow}s.
     */
    interface IAbstractWindowedCursor extends IAbstractCursor
    {
        IsBlob(
            [in] Int32 columnIndex,
            [out] Boolean* rst);

        IsString(
            [in] Int32 columnIndex,
            [out] Boolean* rst);

        IsInt64(
            [in] Int32 columnIndex,
            [out] Boolean* rst);

        IsFloat(
            [in] Int32 columnIndex,
            [out] Boolean* rst);

        /**
         * Set a new cursor window to cursor, usually set a remote cursor window
         */
        SetWindow(
            [in] ICursorWindow* window);

        HasWindow(
            [out] Boolean* rst);
    }
}